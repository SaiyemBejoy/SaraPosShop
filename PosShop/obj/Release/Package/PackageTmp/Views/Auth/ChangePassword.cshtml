@model Models.AllModel.ChangePasswordModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="m-content">
    <div class="row">
        <div class="col-lg-12">

            <!--begin::Portlet-->
            <div class="m-portlet m-portlet--rounded" style="border: 1px solid crimson">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <span class="m-portlet__head-icon">
                                <i class="la la-thumb-tack"></i>
                            </span>
                            <h3 class="m-portlet__head-text">
                                Change Your Password
                            </h3>
                        </div>

                    </div>

                </div>
                <div class="m-portlet__body">
                    <div class="row">
                        <div class="col-4"></div>
                        <div class="col-4">
                            <!--begin::Form-->
                            @using (Html.BeginForm("ChangePassword", "Auth", FormMethod.Post, new { @class = "m-form m-form--fit m-form--label-align-right" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group m-form__group">
                                    <label><b>Old Password</b></label>
                                    @*<input type="password" autocomplete="off" class="form-control m-input--air m-input--pill" id="oldPassword" placeholder="Enter Old Password">*@
                                    @Html.TextBoxFor(c => c.OldPassword, new { @class = "form-control m-input--air m-input--pill", @type = "password", @autocomplete = "off", @placeholder = " Old Password" })
                                    @Html.ValidationMessageFor(c => c.OldPassword)
                                </div>

                                <div class="form-group m-form__group">
                                    <label><b>New Password</b></label>
                                    @*<input type="password" autocomplete="off" class="form-control  m-input--air m-input--pill" id="newPassword" placeholder="Password">*@
                                    @Html.TextBoxFor(c => c.NewPassword, new { @class = "form-control m-input--air m-input--pill", @type = "password", @autocomplete = "off", @placeholder = " Password" })
                                    @Html.ValidationMessageFor(c => c.NewPassword)
                                </div>
                                <div class="form-group m-form__group">
                                    <label><b>Confirm Password</b></label>
                                    @*<input type="password" autocomplete="off" class="form-control  m-input--air m-input--pill" id="confirmPassword" placeholder="Confirm Password">*@
                                    @Html.TextBoxFor(c => c.ConfirmPassword, new { @class = "form-control m-input--air m-input--pill", @type = "password", @autocomplete = "off", @placeholder = " Confirm Password" })
                                    @Html.ValidationMessageFor(c => c.ConfirmPassword)
                                    <span id='message'></span>
                                </div>
                                <div class="m-form__actions">
                                    <button type="submit" class="btn m-btn--pill btn-primary btn-lg m-btn m-btn--custom">Submit</button>

                                </div>
                            }

                            <!--end::Form-->
                        </div>
                        <div class="col-2"></div>
                    </div>


                </div>
            </div>
            <!--end::Portlet-->
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jqueryval")

