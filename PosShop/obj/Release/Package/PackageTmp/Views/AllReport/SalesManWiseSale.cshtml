@model Models.AllModel.Report.SalesManReportModel
@{
    ViewBag.Title = "SalesManWiseSale";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <div class="m-content">
        <div class="row">
            <div class="col-lg-12">

                <!--begin::Portlet-->
                <div class="m-portlet m-portlet--rounded" style="border: 1px solid crimson">

                    <div class="m-portlet__body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="m-portlet m-portlet--rounded" style="border: 1px solid darkgreen;">

                                    <div class="m-portlet__body">

                                        @using (Html.BeginForm("SalesManWiseSale", "AllReport", FormMethod.Post, new { @class = "m-form m-form--fit" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <div class="row">
                                                <div class="col-md-1"></div>
                                                <div class="col-md-6">
                                                    <div class="form-group m-form__group row">
                                                        <label class="col-4 col-form-label">From Date:</label>
                                                        <div class="col-8">
                                                            @*<input class="form-control m-input--air m-input--pill datepicker" value="@ViewBag.dateTime" style="width: 160px;">*@
                                                            @Html.TextBoxFor(c => c.FromDate, new { @class = "form-control m-input--air m-input--pill datepicker", @placeholder = "From Date", @readonly = "readonly", style = "width: 260px;" })
                                                            @Html.ValidationMessageFor(c => c.FromDate)
                                                        </div>
                                                    </div>
                                                    <div class="form-group m-form__group row">
                                                        <label class="col-4 col-form-label">To Date:</label>
                                                        <div class="col-8">
                                                            @*<input class="form-control m-input--air m-input--pill datepicker" value="@ViewBag.dateTime" style="width: 160px;" >*@
                                                            @Html.TextBoxFor(c => c.ToDate, new { @class = "form-control m-input--air m-input--pill datepicker ", @placeholder = "From Date", @readonly = "readonly", style = "width: 260px;" })
                                                            @Html.ValidationMessageFor(c => c.ToDate)
                                                        </div>
                                                    </div>
                                                    <div class="form-group m-form__group row">
                                                        <label class="col-4 col-form-label"> Sales Man:</label>
                                                        <div class="col-8">
                                                            @Html.DropDownListFor(model => model.SalesMan, (IEnumerable<SelectListItem>)ViewBag.EmployeeList, "--All--", new { @class = " form-control m-input--air m-input--pill", style = "width: 260px;" })
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-md-3">
                                                    <h2>Options:</h2>
                                                    <div class="form-group m-form__group row">
                                                        <label class="col-5"><b> Sale Summary:</b></label>
                                                        <div class="col-7">
                                                            @Html.RadioButtonFor(model => model.RadioFor, "S", new { @checked = true, @style = "top: 0;left: 0;height: 22px;width: 22px;" })

                                                        </div>
                                                    </div>

                                                </div>

                                            </div>
                                            <br />
                                            <br />
                                            <br />
                                            <div class="row">
                                                <div class="col-md-4"></div>
                                                <div class="col-md-4">
                                                    <div class="form-group m-form__group row">
                                                        <div class="col-8">
                                                            <button type="submit" formtarget="_blank" class="btn m-btn m-btn--gradient-from-danger m-btn--gradient-to-warning"><i class="m-menu__link-icon flaticon-technology"></i> Show Now</button>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-4"></div>

                                            </div>

                                        }



                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>
                </div>
                <!--end::Portlet-->
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jqueryval")
<script>

    jQuery(document).ready(function () {

        $(function () {
            $(".datepicker").datepicker({
                format: 'dd/mm/yyyy',//check change
                changeMonth: true,
                changeYear: true
            }).datepicker("setDate", new Date());
        });

    });

</script>

