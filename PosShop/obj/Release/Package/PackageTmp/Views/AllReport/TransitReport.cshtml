@model Models.AllModel.Report.TransitReportModel
@{
    ViewBag.Title = "TransitReport";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <div class="m-content">
        <div class="row">
            <div class="col-lg-12">

                <!--begin::Portlet-->
                <div class="m-portlet m-portlet--rounded" style="border: 1px solid crimson">

                    <div class="m-portlet__body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="m-portlet m-portlet--rounded" style="border: 1px solid darkgreen;">

                                    <div class="m-portlet__body">

                                        @using (Html.BeginForm("TransitReport", "AllReport", FormMethod.Post, new { @class = "m-form m-form--fit" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group m-form__group row">
                                                        <label class="col-4 col-form-label"> Market Place:</label>
                                                        <div class="col-8">
                                                            @Html.DropDownListFor(model => model.MarketPalceId, (IEnumerable<SelectListItem>)ViewBag.MarketPlaceList, "--All--", new { @class = " form-control m-input--air m-input--pill", style = "width: 268px;" })
                                                        </div>
                                                    </div>
                                                    <div class="form-group m-form__group row">
                                                        <label class="col-4 col-form-label">Style Name:</label>
                                                        <div class="col-8">
                                                            @Html.TextBoxFor(c => c.StyleName, new { @class = "form-control m-input--air m-input--pill", @placeholder = "Style Name", style = "width: 268px;" })
                                                            @Html.ValidationMessageFor(c => c.StyleName)
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="col-md-6">
                                                    <h2>Options:</h2>
                                                    <div class="form-group m-form__group row">
                                                        <label class="col-5"><b>Transit Stock:</b></label>
                                                        <div class="col-7">
                                                            @Html.RadioButtonFor(model => model.RadioFor, "TPS", new { @checked = true, @style = "top: 0;left: 0;height: 22px;width: 22px;" })

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <br />
                                            <div class="row">
                                                <div class="col-md-4"></div>
                                                <div class="col-md-4">
                                                    <div class="form-group m-form__group row">
                                                        <div class="col-8">
                                                            <button type="submit" formtarget="_blank" class="btn m-btn m-btn--gradient-from-danger m-btn--gradient-to-warning"><i class="m-menu__link-icon flaticon-technology"></i> Show Now</button>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-4"></div>

                                            </div>

                                        }



                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>
                </div>
                <!--end::Portlet-->
            </div>
        </div>
    </div>
</div>
