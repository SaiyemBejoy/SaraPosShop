<script>
    jQuery(document).ready(function () {
        var counterName = localStorage.getItem('counterName');
        $("#counterName").html(counterName);

        $('#m_topbar_notification_icon').click(function () {
                $.ajax({
                    type: 'GET',
                    url: '/Home/GetAllOtherCompanyOffer/',
                    dataType: 'json',
                    beforeSend: function () {
                        $('#cover-spin').show();
                    },
                    success: function (data) {
                        var otherCompanyOffer = data.length;
                        $("#otherCompanyOfferTableBody").html("");
                        for (var i = 0; i < otherCompanyOffer; i++) {
                            $("#otherCompanyOfferTableBody").append('<tr>' +
                                '<td>' +
                                parseInt(i+1) +
                                '</td>' +
                                '<td>' +
                                data[i].CompanyName +
                                '</td>' +
                                '<td>' +
                                data[i].Offer +
                                '</td>' +
                                '<td>' +
                                data[i].OfferValidity +
                                '</td>' +
                                '<td>' +
                                data[i].EligibleForOffer +
                                '</td>' +
                                '</tr>');
                        }
                        $('#cover-spin').hide();
                    }
                });
            }
        );


    });
</script>