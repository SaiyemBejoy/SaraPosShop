                        toastr.success("Save Successfully.");
                    }
                }
            });
        } else {
            toastr.error("Table Data Cann't Be Empty!");
        }

    }

    function receiveDeliveryAllDataSave() {
        var requisitionNumber = $("#RequisitionNumber").val();
        var deliveryNumber = $("#DeliveryNumber").val();

        var allReceiveItem = [];
        allReceiveItem.length = 0;
        $.each($("#requItemDeliveryListTableBody tr"),
            function() {
                allReceiveItem.push({
                    ItemId: $(this).find('td:eq(0)').html(),
                    ProductId: $(this).find('td:eq(1)').html(),
                    Barcode: $(this).find('td:eq(2)').html(),
                    ItemName: $(this).find('td:eq(3)').html(),
                    Price: $(this).find('td:eq(4)').html(),
                    Quantity: $(this).find('td:eq(5)').html()
                });
            });
