    function deliveryAllDataSave() {
        var requisitionNum = $('input[name="requisitionNum"]').val();
        var deliveryShopToId = $('input[name="deliveryToShopId"]').val();

        var allDeliveryItem = [];
        allDeliveryItem.length = 0;
        $.each($("#requFromDeliveryItemTableBody tr"),
            function() {
                allDeliveryItem.push({
                    ItemId: $(this).find('td:eq(0)').html(),
                    ProductId: $(this).find('td:eq(1)').html(),
                    Barcode: $(this).find('td:eq(2)').html(),
                    ItemName: $(this).find('td:eq(3)').text(),
                    Price: $(this).find('td:eq(4)').html(),
                    Quantity: $(this).find('.deliveryQuantity').val()
                });
            });
        var dataObject = {
            'RequisitionNumber': requisitionNum,
            'DeliveryShopIdTo': deliveryShopToId,
            'ShopToShopRequDeliveryItemModelList': allDeliveryItem
        }
        var dataList = JSON.stringify({ objShopToShopDeliveryModel: dataObject });
        if (allDeliveryItem.length) {
            $.ajax({
                type: 'POST',
                contentType: 'application/json',
                dataType: 'json',
                url: '@Url.Action("SaveAllShopToShopDeliveryData", "ShopRequisition")',
                data: dataList,
                success: function(data) {
                    if (data.isRedirect) {
                        window.setTimeout(function() {
                                window.location = data.redirectUrl;
                            },
