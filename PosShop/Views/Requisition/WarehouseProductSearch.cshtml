<script>
    jQuery(document).ready(function () {
        $("#styleName").focus();

        $('#DcproductSearch').on('click', function () {
            var styleNameV = $("#styleName").val();
            $.ajax({
                type: 'GET',
                dataType: 'json',
                url: '/Requisition/GetDcProductByStyleName/',
                data: { styleName: styleNameV },
                beforeSend: function () {
                    $('#cover-spin').show();
                },
                success: function (data) {
                    var dcProductQty = data.length;

                    $('#DCProductStockList').DataTable().destroy();
                    $("#DCStockListBody").html("");
                    for (var i = 0; i < dcProductQty; i++) {
                        $("#DCStockListBody").append('<tr>' +
                            '<td>' +
                            data[i].Barcode +
                            '</td>' +
                            '<td>' +
                            data[i].ItemName +
                            '</td>' +                          
                            '<td>' +
                            data[i].Category +
                            '</td>' +
                            '<td>' +
                            data[i].SubCategory +
                            '</td>' +
                            '<td>' +
                            data[i].SalePrice +
                            '</td>' +
                            '<td>' +
                            data[i].Quantity +
                            '</td>' +
                            '</tr>');
                    }
                    $("#DCProductStockList").dataTable();
                    $('#cover-spin').hide();
                }
            });
