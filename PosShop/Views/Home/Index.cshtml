@using Models.AllModel
@model Models.AllModel.DashboardModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    var lowStock = ViewBag.LowStock as IEnumerable<HotSaleAndLowStockModel>;
    var hotSale = ViewBag.HotSale as IEnumerable<HotSaleAndLowStockModel>;
}

<div class="m-content">
    @if (Model != null)
    {
        <div class="m-portlet ">
            <div class="m-portlet__body  m-portlet__body--no-padding">
                <div class="row m-row--no-padding m-row--col-separator-xl">
                    <div class="col-md-12 col-lg-6 col-xl-6">

                        <!--begin::New Feedbacks-->
                        <div class="m-widget24">
                            <div class="m-widget24__item">
                                <h4 class="m-widget24__title">
                                    TODAY SALE
                                </h4><br>

                                <span class="m-widget24__stats m--font-info">
                                    &#2547; @Model.ToDaysSale
                                </span>
                                <div class="m--space-10"></div>
                                <div class="progress m-progress--sm">
                                    <div class="progress-bar m--bg-info" role="progressbar" style="width: 100%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <span class="m-widget24__change"></span>
                                <span class="m-widget24__number"></span>
                            </div>
                        </div>

                        <!--end::New Feedbacks-->
                    </div>
                    <div class="col-md-12 col-lg-6 col-xl-6">

                        <!--begin::New Users-->
                        <div class="m-widget24">
                            <div class="m-widget24__item">
                                <h4 class="m-widget24__title">
                                    LAST 7 DAYS SALE
                                </h4><br>

                                <span class="m-widget24__stats m--font-success">
                                    &#2547; @Model.LastSevenDaysSale
                                </span>
                                <div class="m--space-10"></div>
                                <div class="progress m-progress--sm">
                                    <div class="progress-bar m--bg-success" role="progressbar" style="width: 100%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <span class="m-widget24__change"></span>
                                <span class="m-widget24__number"></span>
                            </div>
                        </div>

                        <!--end::New Users-->
                    </div>


                </div>
            </div>
        </div>
    }
    else
    {
        <div class="m-portlet ">
            <div class="m-portlet__body  m-portlet__body--no-padding">
                <div class="row m-row--no-padding m-row--col-separator-xl">
                    <div class="col-md-12 col-lg-6 col-xl-6">

                        <!--begin::Total Profit-->
                        <div class="m-widget24">
                            <div class="m-widget24__item">
                                <h4 class="m-widget24__title">
                                    TOTAL SALES
                                </h4><br>

                                <span class="m-widget24__stats m--font-brand">
                                    &#2547; 0
                                </span>
                                <div class="m--space-10"></div>
                                <div class="progress m-progress--sm">
                                    <div class="progress-bar m--bg-brand" role="progressbar" style="width: 100%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <span class="m-widget24__change"></span>
                                <span class="m-widget24__number"></span>
                            </div>
                        </div>

                        <!--end::Total Profit-->
                    </div>

                    <div class="col-md-12 col-lg-6 col-xl-6">

                        <!--begin::New Users-->
                        <div class="m-widget24">
                            <div class="m-widget24__item">
                                <h4 class="m-widget24__title">
                                    LAST 7 DAYS SALE
                                </h4><br>

                                <span class="m-widget24__stats m--font-success">
                                    &#2547; 0
                                </span>
                                <div class="m--space-10"></div>
                                <div class="progress m-progress--sm">
                                    <div class="progress-bar m--bg-success" role="progressbar" style="width: 100%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <span class="m-widget24__change"></span>
                                <span class="m-widget24__number"></span>
                            </div>
                        </div>

                        <!--end::New Users-->
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="m-portlet m-portlet--danger m-portlet--head-solid-bg m-portlet--rounded">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <span class="m-portlet__head-icon">
                                <i class="la la-thumb-tack"></i>
                            </span>
                            <h3 class="m-portlet__head-text">
                                LOW STOCK
                            </h3>
                        </div>
                    </div>

                </div>
                <div class="m-portlet__body">
                    <div class="m-section">
                        <div class="m-section__content">
                            <table class="table table-bordered m-table m-table--border-primary" id="lowStock">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Barcode</th>
                                        <th>Item Name</th>
                                        <th>Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (lowStock != null)
                                    {
                                        int counter = 1;

                                        foreach (var data in lowStock)
                                        {

                                            <tr>
                                                <th>@counter</th>
                                                <td>@data.BarCode</td>
                                                <td>@data.ItemName</td>
                                                <td>@data.Quantity</td>
                                            </tr>
                                            counter++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>I
            </div>
        </div>
        <div class="col-md-6">
            <div class="m-portlet m-portlet--success m-portlet--head-solid-bg m-portlet--rounded">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <span class="m-portlet__head-icon">
                                <i class="la la-thumb-tack"></i>
                            </span>
                            <h3 class="m-portlet__head-text">
                                HOT SALE ITEM
                            </h3>
                        </div>
                    </div>

                </div>
                <div class="m-portlet__body">
                  
                        <div class="m-section">
                            <div class="m-section__content">

                                <table class=" table table-bordered m-table m-table--border-success " id="HotSale">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Barcode</th>
                                            <th>Item Name</th>
                                        </tr>
                                    </thead>
                                   
                                        <tbody id="hotsaleBody">


                                            @if (hotSale != null)
                                            {
                                                int counter = 1;

                                                foreach (var data2 in hotSale)
                                                {

                                                    <tr>
                                                        <td>@counter</td>
                                                        <td>@data2.BarCode</td>
                                                        <td>@data2.ItemName</td>
                                                    </tr>
                                                    counter++;
                                                }
                                            }

                                        </tbody>
                                   
                                </table>
                            </div>
                        </div>
                   
                </div>I
            </div>
        </div>
    </div>

</div>

