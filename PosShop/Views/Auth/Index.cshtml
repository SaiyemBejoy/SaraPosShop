@model Models.AllModel.AuthModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">

<!-- begin::Head -->
<head>
    <meta charset="utf-8" />
    <title>PosShop|Login</title>
    <meta name="description" content="Latest updates and statistic charts">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <!--begin::Web font -->
    @*<script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>*@
    <script src="~/Content/assets/snippets/custom/pages/user/OnlineFont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>

    <!--end::Web font -->
    <!--begin::Global Theme Styles -->
    <link href="/Content/assets/vendors/base/vendors.bundle.css" rel="stylesheet" type="text/css" />
    <link href="/Content/assets/demo/base/style.bundle.css" rel="stylesheet" type="text/css" />
    <!--end::Global Theme Styles -->
    @*<link rel="shortcut icon" href="/Content/assets/demo/media/img/logo/favicon.ico" />*@
</head>
<!-- end::Head -->
<!-- begin::Body -->
<body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--fixed m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page">
        <div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-2" id="m_login" style="background-image: url(/Content/assets/app/media/img/bg/bg-3.jpg);">
            <div class="m-grid__item m-grid__item--fluid	m-login__wrapper">
                <div class="m-login__container">
                    <div class="m-login__logo">
                        <a href="#">
                            <img src="/Content/assets/app/media/img/logos/SaRa 200x105.png">
                        </a>
                    </div>
                    <div class="m-login__signin">
                        <div class="m-login__head">
                            @if (TempData["message"] != null)
                            {

                                <div class="m-alert m-alert--outline alert alert-danger alert-dismissible fade show" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                                    <strong>Warning!</strong> @TempData["message"].
                                </div>
                            }
                        </div>
                        @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "m-login__form m-form" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group m-form__group">
                                @*<input class="form-control m-input" type="text" placeholder="Email" name="email" autocomplete="off">*@
                                @Html.TextBoxFor(c => c.EmployeeId, new { @class = "form-control m-input", @type = "text", @autocomplete = "off", @placeholder = "Employee ID", @name = "Employee ID" })
                                @Html.ValidationMessageFor(c => c.EmployeeId, "", new { @class = "text-danger", @style = "font-size: xx-small" })

                            </div>
                            <div class="form-group m-form__group">
                                @*<input class="form-control m-input m-login__form-input--last" type="password" placeholder="Password" name="password">*@
                                @Html.TextBoxFor(c => c.Password, new { @class = "form-control m-input m-login__form-input--last", @type = "password", @autocomplete = "off", @placeholder = "Password", @name = "password" })
                                @Html.ValidationMessageFor(c => c.Password, "", new { @class = "text-danger", @style = "font-size: xx-small" })

                            </div>
                            <div class="form-group m-form__group">
                                @*<input class="form-control m-input m-login__form-input--last" type="password" placeholder="Password" name="password">*@
                                @Html.TextBoxFor(c => c.Counter, new { @class = "form-control m-input m-login__form-input--last", @autocomplete = "off", @placeholder = "Counter Name", @name = "Counter" })
                                @Html.ValidationMessageFor(c => c.Counter, "", new { @class = "text-danger", @style = "font-size: xx-small" })

                            </div>
                            <div class="row m-login__form-sub">
                                <div class="col m--align-left m-login__form-left">
                                    <label class="m-checkbox  m-checkbox--focus">
                                        <input type="checkbox" name="remember"> Remember me
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col m--align-right m-login__form-right">
                                    @*<a href="javascript:;" id="m_login_forget_password" class="m-link">Forget Password ?</a>*@
                                </div>
                            </div>
                            <div class="m-login__form-action">
                                <button type="submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary">Sign In</button>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- end:: Page -->
    <!--begin::Global Theme Bundle -->
    <script src="/Content/assets/vendors/base/vendors.bundle.js" type="text/javascript"></script>
    <script src="/Content/assets/demo/default/base/scripts.bundle.js" type="text/javascript"></script>
    <!--end::Global Theme Bundle -->
    <!--begin::Page Scripts -->
    <script src="/Content/assets/snippets/custom/pages/user/login.js" type="text/javascript"></script>

    <!--end::Page Scripts -->
</body>

<!-- end::Body -->
</html>
@Scripts.Render("~/bundles/jqueryval")
<script>
    $(document).ready(function () {

        $(".m-login__btn").click(function (e) {
            var counterName = $("#Counter").val().toLowerCase().trim();

            if (counterName === null) {
                alert("counter name is required");
            } else {
                localStorage.setItem("counterName", counterName);
            }

        });

    })
</script>
