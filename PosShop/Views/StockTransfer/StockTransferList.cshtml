
@{
    ViewBag.Title = "StockTransferList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <div class="m-content">
        <div class="row">
            <div class="col-lg-12">
                <!--begin::Portlet-->
                <div class="m-portlet m-portlet--rounded" style="border: 1px solid darkgreen">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <span class="m-portlet__head-icon">
                                    <i class="la la-thumb-tack"></i>
                                </span>
                                <h3 class="m-portlet__head-text">
                                    All Transfer Challan List
                                </h3>
                            </div>
                        </div>

                    </div>
                    <div class="m-portlet__body">
                        <div class="m-section">
                            <div class="m-section__content">
                                <table class="table table-bordered m-table m-table--border-danger" id="transferChallanTable">
                                    <thead>
                                        <tr>
                                            <th>Transfer Challan Num</th>
                                            <th>Transfer Date</th>
                                            <th>Transfer By</th>
                                            <th>Transfer To</th>
                                            <th>Received</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
                <!--end::Portlet-->
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade show" id="itemModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" style="padding-right: 17px;">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-body">
                <div class="m-portlet m-portlet--rounded" style="border: 1px solid darkgreen;">

                    <div class="m-portlet__body">

                        <table class="table table-striped- table-bordered table-hover dataTable dtr-inline" id="transferItemTable">
                            <thead>
                                <tr>
                                    <th>BarCode</th>
                                    <th>ItemName</th>
                                    <th>Transfer Qty</th>
                                    <th>Sale Price</th>
                                </tr>
                            </thead>
                            <tbody id="transferItemTableBody"></tbody>
                        </table>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4"></div>
                    <div class="col-md-8">
                        <div class="form-group m-form__group row">
                            <label class="col-md-3 control-label"><strong>Total Item:</strong></label>
                            <div class="col-md-6">
                                <input type="text" class="form-control m-input--air m-input--pill" id="totalTransferItem" style="width: 150px; background-color: yellow" readonly="readonly" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn m-btn--pill btn-outline-danger" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>
<!--end::Modal-->
<script>
    jQuery(document).ready(function() {

        var vForm = $('#__AjaxAntiForgeryForm');
        var vToken = $('input[name="__RequestVerificationToken"]', vForm).val();

        var table = $("#transferChallanTable").dataTable({
            "processing": true,
            "serverSide": true,
            "searchHighlight": true,
            "order": [[0, "desc"]],
            "ajax": {
                data: {
                    __RequestVerificationToken: vToken
                },
                url: '@Url.Action("GetAllTransferChallanForDataTable", "StockTransfer")',
                type: 'POST'
            },
            "columns": [
                {
                    "data": "StockTransferChallanNumber"
                },
                {
                    "data": "TransferDate"
                },
                {
                    "data": "TransferedByName"
                },
                {
                    "data": "TransferToShopName"
                },
                {
                    "data": "ReceivedYN"
                },
                {
                    "data": "StockTransferId",
                    "orderable": false,
                    render: function (data, type, productReceiveGrid) {
                        return "<a href='#' class='btn m-btn m-btn--gradient-from-primary m-btn--gradient-to-info shopTransferItem' data-id=" +
                            productReceiveGrid.StockTransferId +
                            "><i class='fa fa-eye'></i> Show Item</a>" +
                            "&nbsp; &nbsp;" +
                            "<a href='#' class='btn m-btn m-btn--gradient-from-danger m-btn--gradient-to-info shopTransferReport' data-id=" +
                            productReceiveGrid.StockTransferChallanNumber +
                            "><i class='m-menu__link-icon flaticon-technology'></i> Show Report</a>" +
                            "&nbsp; &nbsp;" +
                            "<a href='#' class='btn m-btn m-btn--gradient-from-success m-btn--gradient-to-info shopTransferReportGvtFormate' data-id=" +
                            productReceiveGrid.StockTransferChallanNumber +
                            "><i class='m-menu__link-icon flaticon-technology'></i> Show Report 6.5</a>";

                    }
                }
            ]
        });


        $("#transferChallanTable").on('click',
        '.shopTransferItem',
        function() {

            var transferId = $(this).data('id');
            transferItemList(transferId);
        });

        function transferItemList(transferId) {
            var dataId = JSON.stringify({ transferId: transferId });
        $.ajax({
            type: 'POST',
            contentType: 'application/json',
            dataType: 'json',
            url: '@Url.Action("ViewAllTransferInfoByStoreReceiveChallanNo", "StockTransfer")',
            data: dataId,
            success: function (data) {
                var tableQuantity = data.length;
                $("#transferItemTableBody").html("");
                for (var i = 0; i < tableQuantity; i++) {
                    $("#transferItemTableBody").append('<tr>' +
                        '<td>' +
                        data[i].Barcode +
                        '</td>' +
                        '<td>' +
                        data[i].ItemName +
                        '</td>' +
                        '<td>' +
                        data[i].TransferQuantity +
                        '</td>' +
                        '<td>' +
                        data[i].SalePrice +
                        '</td>' +
                        '</tr>'
                    );

                    $("#itemModal").modal("show");
                    totalItemCount();
                }

            }
        });
    }
    function totalItemCount() {
        var total = 0;
        $("#transferItemTableBody tr").each(function() {
            total += parseInt($(this).find('td:eq(2)').text());

        });
        $("#totalTransferItem").val(total);
    }
    });
    $("#transferChallanTable").on('click',
        '.shopTransferReport',
        function () {
            var transferChallanNumber = $(this).data('id');
            if (transferChallanNumber !== null) {
                window.open('/StockTransfer/ShowReport?transferChallanNo=' + transferChallanNumber, '_blank');
            }
        });
    $("#transferChallanTable").on('click',
        '.shopTransferReportGvtFormate',
        function () {
            var transferChallanNumber = $(this).data('id');
            if (transferChallanNumber !== null) {
                window.open('/StockTransfer/ShowReportGovtFormate?transferChallanNo=' + transferChallanNumber, '_blank');
            }
        });

</script>